<div class="w-full">
  <% content_for :title, "Jewels" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Jewels</h1>
    <%= link_to "New jewel", new_jewel_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="jewels" class="min-w-full">
    <% @jewels.each do |jewel| %>
      <%= render jewel %>
      <p>
        <%= link_to "Show this jewel", jewel, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
