<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @jewel %>

    <%= link_to "Edit this jewel", edit_jewel_path(@jewel), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to jewels", jewels_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this jewel", @jewel, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
